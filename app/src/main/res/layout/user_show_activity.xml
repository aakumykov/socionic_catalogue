<?xml version="1.0" encoding="utf-8"?>
<androidx.swiperefreshlayout.widget.SwipeRefreshLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/swipeRefreshLayout"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    app:layout_constraintBottom_toBottomOf="parent"
    app:layout_constraintEnd_toEndOf="parent"
    app:layout_constraintStart_toStartOf="parent"
    app:layout_constraintTop_toBottomOf="@id/include">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        tools:context=".users.show.UserShow_View">

        <include
            layout="@layout/progress_and_message"
            android:layout_width="match_parent"
            android:layout_height="wrap_content" />

        <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="8dp">

            <ImageView
                android:id="@+id/avatarView"
                android:layout_width="0dp"
                android:layout_height="0dp"
                android:layout_marginStart="8dp"
                android:layout_marginTop="8dp"
                android:layout_marginEnd="8dp"
                android:layout_marginBottom="8dp"
                android:contentDescription="@string/DESCRIPTION_user_avatar"
                app:layout_constraintBottom_toTopOf="@+id/guidelineHoriz"
                app:layout_constraintEnd_toStartOf="@+id/guidelineVert"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent"
                app:srcCompat="@drawable/ic_avatar_placeholder" />

            <ProgressBar
                android:id="@+id/avatarThrobber"
                style="?android:attr/progressBarStyle"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginEnd="8dp"
                android:visibility="gone"
                app:layout_constraintBottom_toBottomOf="@+id/avatarView"
                app:layout_constraintEnd_toEndOf="@+id/avatarView"
                app:layout_constraintStart_toStartOf="@+id/avatarView"
                app:layout_constraintTop_toTopOf="@+id/avatarView" />

            <TextView
                android:id="@+id/nameLabel"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_marginStart="8dp"
                android:layout_marginTop="8dp"
                android:text="@string/USER_SHOW_name"
                android:textColor="@color/colorPrimary"
                app:layout_constraintEnd_toStartOf="@+id/editNameWidget"
                app:layout_constraintStart_toStartOf="@+id/guidelineVert"
                app:layout_constraintTop_toTopOf="parent" />

            <TextView
                android:id="@+id/nameView"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_marginStart="8dp"
                android:ems="10"
                android:singleLine="false"
                android:textSize="16sp"
                app:layout_constraintEnd_toStartOf="@+id/editNameWidget"
                app:layout_constraintStart_toStartOf="@+id/guidelineVert"
                app:layout_constraintTop_toBottomOf="@+id/nameLabel"
                tools:text="Имя, длинной имя пользователя программы Соционический каталог" />

            <ImageView
                android:id="@+id/editNameWidget"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginEnd="8dp"
                app:layout_constraintBottom_toBottomOf="@+id/nameLabel"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintTop_toTopOf="@+id/nameLabel"
                app:srcCompat="@drawable/ic_email_edit" />

            <TextView
                android:id="@+id/emailLabel"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_marginStart="8dp"
                android:layout_marginTop="16dp"
                android:text="@string/USER_SHOW_email"
                android:textColor="@color/colorPrimary"
                app:layout_constraintEnd_toStartOf="@+id/editEmailWidget"
                app:layout_constraintStart_toStartOf="@+id/guidelineVert"
                app:layout_constraintTop_toBottomOf="@+id/nameView" />

            <TextView
                android:id="@+id/emailView"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_marginStart="8dp"
                android:singleLine="false"
                android:textSize="16sp"
                app:layout_constraintEnd_toStartOf="@+id/editEmailWidget"
                app:layout_constraintStart_toStartOf="@+id/guidelineVert"
                app:layout_constraintTop_toBottomOf="@+id/emailLabel"
                tools:text="user@mail.ru" />

            <ImageView
                android:id="@+id/editEmailWidget"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginEnd="8dp"
                app:layout_constraintBottom_toBottomOf="@+id/emailLabel"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintTop_toTopOf="@+id/emailLabel"
                app:srcCompat="@drawable/ic_email_edit" />

            <TextView
                android:id="@+id/aboutLabel"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_marginStart="8dp"
                android:layout_marginTop="16dp"
                android:text="@string/USER_SHOW_about"
                android:textColor="@color/colorPrimary"
                app:layout_constraintEnd_toStartOf="@+id/editAboutWidget"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/emailView" />

            <TextView
                android:id="@+id/aboutView"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_marginStart="8dp"
                android:layout_marginTop="8dp"
                android:ems="10"
                android:singleLine="false"
                android:textSize="16sp"
                app:layout_constraintEnd_toStartOf="@+id/editAboutWidget"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/aboutLabel"
                tools:text="Описание пользователя, написанное самим пользователем." />

            <ImageView
                android:id="@+id/editAboutWidget"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginEnd="8dp"
                app:layout_constraintBottom_toBottomOf="@+id/aboutLabel"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintTop_toTopOf="@+id/aboutLabel"
                app:srcCompat="@drawable/ic_email_edit" />

            <androidx.constraintlayout.widget.Guideline
                android:id="@+id/guidelineHoriz"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                app:layout_constraintGuide_begin="114dp" />

            <androidx.constraintlayout.widget.Guideline
                android:id="@+id/guidelineVert"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                app:layout_constraintGuide_begin="117dp" />

        </androidx.constraintlayout.widget.ConstraintLayout>

    </LinearLayout>

</androidx.swiperefreshlayout.widget.SwipeRefreshLayout>

