<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="match_parent">

    <EditText
        android:id="@+id/currentPasswordInput"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="@string/USER_CHANGE_PASSWORD_current_password"
        android:textSize="16sp"
        android:ems="10"
        android:layout_marginBottom="8dp"
        android:inputType="textPassword" />

    <EditText
        android:id="@+id/newPasswordInput"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="@string/USER_CHANGE_PASSWORD_new_password"
        android:textSize="16sp"
        android:ems="10"
        android:layout_marginBottom="8dp"
        android:inputType="textPassword" />

    <EditText
        android:id="@+id/newPasswordConfirmationInput"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="@string/USER_CHANGE_PASSWORD_new_password_confirmation"
        android:textSize="16sp"
        android:ems="10"
        android:layout_marginBottom="8dp"
        android:inputType="textPassword" />

    <Button
        android:id="@+id/saveButton"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:textSize="@dimen/major_button_font_size"
        android:text="@string/save" />

    <Button
        android:id="@+id/cancelButton"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:textSize="@dimen/minor_button_font_size"
        android:text="@string/cancel" />

</LinearLayout>