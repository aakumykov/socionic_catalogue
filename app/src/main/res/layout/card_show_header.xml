<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/cardHolder"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    android:padding="12dp">

    <TextView
        android:id="@+id/titleView"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="12dp"
        android:text="Заголовокъ"
        android:textColor="@color/card_show_title"
        android:textIsSelectable="true"
        android:textSize="20sp"
        android:textStyle="bold"
        android:visibility="visible" />

    <TextView
        android:id="@+id/quoteView"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="5dp"
        android:paddingStart="4dp"
        android:paddingEnd="4dp"
        android:text="Цитата высказывания великого человека, цитировавшего другого, ещё более великого, но менее известного человека."
        android:textColor="@color/colorPrimary"
        android:textIsSelectable="true"
        android:textSize="18sp"
        android:textStyle="italic" />

    <TextView
        android:id="@+id/quoteSourceView"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="15dp"
        android:paddingStart="4dp"
        android:paddingLeft="40dp"
        android:paddingEnd="4dp"
        android:text="Источник цитаты"
        android:textAlignment="textEnd"
        android:textColor="@color/colorPrimary"
        android:textIsSelectable="true"
        android:textSize="16sp"
        android:textStyle="italic"
        android:visibility="gone" />

    <ProgressBar
        android:id="@+id/imageProgressBar"
        style="?android:attr/progressBarStyle"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:indeterminate="true"
        android:visibility="gone"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <ImageView
        android:id="@+id/imageView"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:adjustViewBounds="true"
        android:contentDescription="@string/image_placeholder"
        android:scaleType="centerInside"
        android:visibility="gone"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <ProgressBar
        android:id="@+id/videoPlayerThrobber"
        style="?android:attr/progressBarStyle"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:indeterminate="true"
        android:visibility="gone" />

    <FrameLayout
        android:id="@+id/videoPlayerHolder"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:visibility="visible" />

    <TextView
        android:id="@+id/descriptionView"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="10dp"
        android:paddingStart="4dp"
        android:paddingEnd="4dp"
        android:text="Обстоятельное описание мимолётной цитаты, приведённой выше. Обстоятельное описание мимолётной цитаты, приведённой выше. Обстоятельное описание мимолётной цитаты, приведённой выше. Обстоятельное описание мимолётной цитаты, приведённой выше. Обстоятельное описание мимолётной цитаты, приведённой выше. Обстоятельное описание мимолётной цитаты, приведённой выше. Обстоятельное описание мимолётной цитаты, приведённой выше. Обстоятельное описание мимолётной цитаты, приведённой выше."
        android:textColor="@color/card_show_description"
        android:textIsSelectable="true"
        android:textSize="18sp"
        android:textStyle="normal" />

    <TextView
        android:id="@+id/authorView"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="5dp"
        android:text="Автор"
        android:textAlignment="viewEnd"
        android:textColor="@color/colorPrimary"
        android:textSize="16dp" />

    <TextView
        android:id="@+id/cTimeView"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="2dp"
        android:text="cTime"
        android:textAlignment="viewEnd"
        android:textColor="@color/grey"
        android:visibility="gone" />

    <TextView
        android:id="@+id/mTimeView"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="mTime"
        android:textAlignment="viewEnd"
        android:textColor="@color/grey"
        android:visibility="gone" />

    <co.lujun.androidtagview.TagContainerLayout
        android:id="@+id/tagsContainer"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="25dp"
        android:layout_marginBottom="25dp"
        app:container_background_color="@color/transparent"
        app:container_border_color="@color/transparent"
        app:container_enable_drag="false"
        app:horizontal_interval="10dp"
        app:tag_clickable="true"
        app:tag_ripple_duration="400"
        app:tag_text_size="@dimen/tag_font_size"
        app:tag_theme="pure_teal"
        app:vertical_interval="10dp" />

    <android.support.constraint.ConstraintLayout
        android:id="@+id/ratingHolder"
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <ImageView
            android:id="@+id/cardRateUpButton"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:srcCompat="@drawable/ic_thumb_up_neutral" />

        <TextView
            android:id="@+id/cardRatingView"
            android:layout_width="30dp"
            android:layout_height="match_parent"
            android:text="0"
            android:textAlignment="center"
            android:textSize="18sp"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintStart_toEndOf="@+id/cardRateUpButton"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintVertical_bias="0.0" />

        <ProgressBar
            android:id="@+id/cardRatingThrobber"
            style="?android:attr/progressBarStyle"
            android:layout_width="30dp"
            android:layout_height="0dp"
            android:visibility="gone"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintStart_toEndOf="@+id/cardRatingView"
            app:layout_constraintTop_toTopOf="parent" />

        <ImageView
            android:id="@+id/cardRateDownButton"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintStart_toEndOf="@+id/cardRatingThrobber"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintVertical_bias="0.0"
            app:srcCompat="@drawable/ic_thumb_down_neutral" />

    </android.support.constraint.ConstraintLayout>

</LinearLayout>

