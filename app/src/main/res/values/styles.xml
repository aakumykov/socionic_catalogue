<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.MaterialComponents.Light.DarkActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
    </style>

    <!--  Меню внизу страницы, для тёмного фона -->

    <!--  Меню внизу страницы, для светлого фона -->
    <style name="MyBottomSheetMenuStyleForLight" parent="@style/Theme.BottomSheetMenuDialog.Light">
        <item name="bottom_sheet_menu_title_text_appearance">@style/TitleAppearanceOnLight</item>
        <item name="bottom_sheet_menu_list_text_appearance">@style/ListAppearanceOnLight</item>
        <item name="bottom_sheet_menu_grid_text_appearance">@style/GridAppearanceOnLight</item>
    </style>

    <style name="TitleAppearanceOnLight" parent="BottomSheetMenu.Title.TextAppearance.Light">
<!--        <item name="android:textColor">@color/lightest_grey</item>-->
    </style>

    <style name="ListAppearanceOnLight" parent="BottomSheetMenu.ListItem.TextAppearance.Light">
<!--        <item name="android:textColor">@color/lightest_grey</item>-->
        <item name="android:textSize">18sp</item>
    </style>

    <style name="GridAppearanceOnLight" parent="BottomSheetMenu.GridItem.TextAppearance.Light">
<!--        <item name="android:textColor">@color/lightest_grey</item>-->
        <item name="android:textSize">20sp</item>
    </style>

    <style name="main_button">
        <item name="android:layout_marginTop">@dimen/major_button_margin_top</item>
        <item name="android:textSize">@dimen/major_button_font_size</item>
    </style>

    <style name="cancel_button">
        <item name="android:layout_marginTop">@dimen/minor_button_margin_top</item>
        <item name="android:textSize">@dimen/minor_button_font_size</item>
    </style>

    <style name="tagFilterChipTextAppearance" parent="TextAppearance.MaterialComponents.Chip">
        <item name="android:textSize">18sp</item>
    </style>

    <style name="tagFilterChipShapeAppearance">
        <item name="chipStrokeColor">#9CCC65</item>
        <item name="chipStrokeWidth">1dp</item>
        <item name="chipBackgroundColor">#F1F8E9</item>
    </style>

    <style name="user_show_outlined_button">
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_marginStart">8dp</item>
        <item name="android:layout_marginEnd">8dp</item>
        <item name="android:layout_marginTop">8dp</item>
        <item name="android:padding">8dp</item>
        <!--<item name="android:background">@drawable/shape_user_show_outlined_button</item>-->
        <item name="android:textSize">16sp</item>
        <!--<item name="android:textColor">@color/colorPrimary</item>-->
        <item name="android:textAlignment">center</item>
        <item name="android:textAllCaps">false</item>
    </style>

    <style name="card_quote">
        <item name="fontFamily">serif</item>
        <item name="android:textSize">18sp</item>
        <item name="android:lineSpacingMultiplier">1.15</item>
        <item name="android:textColor">@color/quoteTextColor</item>
        <item name="android:textStyle">italic</item>
    </style>


</resources>
