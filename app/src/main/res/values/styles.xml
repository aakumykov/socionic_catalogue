<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.MaterialComponents.Light.DarkActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
    </style>

    <!--  Меню внизу страницы, для тёмного фона -->
    <style name="MyBottomSheetMenuStyleForDark" parent="@style/Theme.BottomSheetMenuDialog">
        <item name="bottom_sheet_menu_title_text_appearance">@style/TitleAppearanceOnDark</item>
        <item name="bottom_sheet_menu_list_text_appearance">@style/ListAppearanceOnDark</item>
        <item name="bottom_sheet_menu_grid_text_appearance">@style/GridAppearanceOnDark</item>
    </style>

    <style name="TitleAppearanceOnDark" parent="BottomSheetMenu.Title.TextAppearance">
        <item name="android:textColor">@color/lightest_grey</item>
    </style>

    <style name="ListAppearanceOnDark" parent="BottomSheetMenu.ListItem.TextAppearance">
<!--        <item name="android:textColor">@color/lightest_grey</item>-->
        <item name="android:textSize">18sp</item>
    </style>

    <style name="GridAppearanceOnDark" parent="BottomSheetMenu.GridItem.TextAppearance">
<!--        <item name="android:textColor">@color/lightest_grey</item>-->
        <item name="android:textSize">20sp</item>
    </style>

    <!--  Меню внизу страницы, для светлого фона -->
    <style name="MyBottomSheetMenuStyleForLight" parent="@style/Theme.BottomSheetMenuDialog.Light">
        <item name="bottom_sheet_menu_title_text_appearance">@style/TitleAppearanceOnLight</item>
        <item name="bottom_sheet_menu_list_text_appearance">@style/ListAppearanceOnLight</item>
        <item name="bottom_sheet_menu_grid_text_appearance">@style/GridAppearanceOnLight</item>
    </style>

    <style name="TitleAppearanceOnLight" parent="BottomSheetMenu.Title.TextAppearance.Light">
<!--        <item name="android:textColor">@color/lightest_grey</item>-->
    </style>

    <style name="ListAppearanceOnLight" parent="BottomSheetMenu.ListItem.TextAppearance.Light">
<!--        <item name="android:textColor">@color/lightest_grey</item>-->
        <item name="android:textSize">18sp</item>
    </style>

    <style name="GridAppearanceOnLight" parent="BottomSheetMenu.GridItem.TextAppearance.Light">
<!--        <item name="android:textColor">@color/lightest_grey</item>-->
        <item name="android:textSize">20sp</item>
    </style>

    <style name="NoPopupAnimation" parent="Widget.AppCompat.PopupMenu">
        <item name="android:popupAnimationStyle">@null</item>
    </style>

    <style name="main_button">
        <item name="android:layout_marginTop">@dimen/major_button_margin_top</item>
        <item name="android:textSize">@dimen/major_button_font_size</item>
    </style>

    <style name="cancel_button">
        <item name="android:layout_marginTop">@dimen/minor_button_margin_top</item>
        <item name="android:textSize">@dimen/minor_button_font_size</item>
    </style>

    <style name="tagFilterChipTextAppearance" parent="TextAppearance.MaterialComponents.Chip">
        <item name="android:textSize">18sp</item>
        <!--<item name="android:fontFamily">monospace</item>
        <item name="android:textStyle">italic|bold</item>-->
    </style>

</resources>
