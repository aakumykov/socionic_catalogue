<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <include
        layout="@layout/progress_and_message"
        android:layout_width="match_parent"
        android:layout_height="wrap_content" />

    <EditText
        android:id="@+id/nameInput"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:ems="10"
        android:hint="@string/REGISTER2_user_name"
        android:inputType="textCapWords|textPersonName"
        android:singleLine="true"
        android:textAlignment="center" />

    <TextView
        android:id="@+id/nameErrorView"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:textAlignment="center"
        android:textColor="@color/error"
        android:textStyle="italic"
        android:visibility="gone" />

    <EditText
        android:id="@+id/emailInput"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:ems="10"
        android:hint="@string/REGISTER2_email"
        android:inputType="textEmailAddress"
        android:singleLine="true"
        android:textAlignment="center" />

    <TextView
        android:id="@+id/emailErrorView"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:textAlignment="center"
        android:textColor="@color/error"
        android:textStyle="italic"
        android:visibility="gone" />

    <EditText
        android:id="@+id/password1Input"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:ems="10"
        android:hint="@string/REGISTER2_password"
        android:inputType="textPassword"
        android:singleLine="true"
        android:textAlignment="center" />

    <EditText
        android:id="@+id/password2Input"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:ems="10"
        android:hint="@string/REGISTER2_password_confirmation"
        android:inputType="textPassword"
        android:singleLine="true"
        android:textAlignment="center" />

    <TextView
        android:id="@+id/passwordErrorView"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:textAlignment="center"
        android:textColor="@color/error"
        android:textStyle="italic"
        android:visibility="gone" />

    <Button
        android:id="@+id/registerButton"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="@string/REGISTER2_do_register"
        android:textSize="@dimen/major_button_font_size"
        android:layout_marginTop="10dp"/>

    <Button
        android:id="@+id/button2"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="@string/REGISTER2_do_not_register"
        android:textSize="@dimen/minor_button_font_size" />

</LinearLayout>