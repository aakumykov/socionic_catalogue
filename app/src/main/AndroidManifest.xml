            </intent-filter>
        </service>

        <service
            android:name=".backup_job.Backup_JobService"
            android:enabled="true"
            android:exported="false"
            android:permission="android.permission.BIND_JOB_SERVICE" />

        <service android:name=".backup_job.BackupService" />

        <service
            android:name=".services.NewCardsService"
            android:enabled="true"
            android:exported="false" />

        <service
            android:name=".services.NewCommentsService"
            android:enabled="true"
            android:exported="false" />

    </application>

</manifest>